{% include 'AppBundle:Summoner:_top_champion_mastery.html.twig' %}
{% if rankedStats is not empty %}
    <table class="table table-bordered table-responsive table-striped">
        <tbody>
            <tr>
                <td>Winrate</td>
                <td>{{ rankedStats.6.average.winrate }} % (<span class="positive-color">{{ rankedStats.6.average.wins }}</span> - <span class="negative-color">{{ rankedStats.6.average.loses }}</span>)</td>
            </tr>
            <tr>
                <td>KDA</td>
                <td>{{ rankedStats.6.average.KDA }} ({{ rankedStats.6.average.killsAVG }} / {{ rankedStats.6.average.deathsAVG }} / {{ rankedStats.6.average.assistsAVG }})</td>
            </tr>
            <tr>
                <td>Creeps</td>
                <td>{{ rankedStats.6.average.creepsAVG }}</td>
            </tr>
        </tbody>
    </table>
{% endif %}
<div>
    <div class="relative-container">
        <div class="runes-background" style="background-image: url({{ asset('bundles/app/images/runes/rune-bg.png') }});"></div>
        {% for index in 1..9 %}
            <div class="overlay runes rune-overlay-{{ index }}"  style="background-image: url('http://ddragon.leagueoflegends.com/cdn/6.24.1/img/rune/r_3_3.png');"></div>
        {% endfor %}
        {% for index in 10..18 %}
            <div class="overlay runes rune-overlay-{{ index }}" style="background-image: url('http://ddragon.leagueoflegends.com/cdn/6.24.1/img/rune/y_4_3.png');"></div>
        {% endfor %}
        {% for index in 19..27 %}
            <div class="overlay runes rune-overlay-{{ index }}" style="background-image: url('http://ddragon.leagueoflegends.com/cdn/6.24.1/img/rune/b_1_3.png');"></div>
        {% endfor %}
        {% for index in 28..30 %}
