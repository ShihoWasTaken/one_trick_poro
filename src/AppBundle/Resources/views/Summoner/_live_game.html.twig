{% if currentGame.status.status_code is defined %}
    <div>{{ 'live.game.not.found'|trans }}</div>
{% else %}
    <table id="blue_team" class="table table-bordered table-responsive">
        <thead>
        <tr>
            <th>{{ 'live.game.name'|trans }}</th>
            <th>{{ 'live.game.tier'|trans }}</th>
            <th>{{ 'live.game.stats'|trans }}</th>
            <th>{{ 'live.game.champion'|trans }}</th>
            <th>{{ 'live.game.champion.stats'|trans }}</th>
            <th>{{ 'live.game.runes'|trans }}</th>
        </tr>
        </thead>
        <tr>
            {% for bannedChampion in currentGame.bannedChampions %}
                {% if bannedChampion.teamId == 100 %}
                    <img src="http://ddragon.leagueoflegends.com/cdn/{{ static_data_version }}/img/champion/{{ champions[bannedChampion.championId]['key'] }}.png">
                {% endif %}
            {% endfor %}
        </tr>
        {% for player in currentGame.participants %}
            {% if player.teamId == 100 %}
                <tr>
                    <td><a target="_blank" href="{{ url('app_summoner', {'summonerId': player.summonerId,'region': summoner.region.slug}) }}"><span class="live-game-name">{{ player.summonerName }}</span></a></td>
                    <td>
                        {% if live_game_data is not empty %}
                            <img class="live-game-rank" src="{{ asset('bundles/app/images/leagues/' ~ live_game_data[player.summonerId].img ~ '.png') }}" />
                            <span class="live-game-rank" >{{ live_game_data[player.summonerId].rank }}</span>
                        {% endif %}
                    </td>
                    <td>
                        {% if playerStats[player.summonerId].general is not empty %}
                        {{ playerStats[player.summonerId].general.winrate }} %<br>
                            <span class="positive-color">{{ playerStats[player.summonerId].general.wins }}</span> - <span class="negative-color">{{ playerStats[player.summonerId].general.loses }}</span><br>
                            {{ playerStats[player.summonerId].general.kda }}<br>
                            {{ playerStats[player.summonerId].general.killsAVG }} / {{ playerStats[player.summonerId].general.deathsAVG }} / {{ playerStats[player.summonerId].general.assistsAVG }}
                        {% endif %}
                    </td>
                    <td>
                        <img class="live-game-champion" src="http://ddragon.leagueoflegends.com/cdn/{{ static_data_version }}/img/champion/{{ champions[player.championId]['key'] }}.png">
                        <br>
                        <img class="live-game-summoner" src="http://ddragon.leagueoflegends.com/cdn/{{ static_data_version }}/img/spell/{{ summonerSpells[player.spell1Id] }}.png">
                        <img class="live-game-summoner" src="http://ddragon.leagueoflegends.com/cdn/{{ static_data_version }}/img/spell/{{ summonerSpells[player.spell2Id] }}.png">
                    </td>
                    <td>
                        {% if playerStats[player.summonerId].champion is not empty %}
                            {{ playerStats[player.summonerId].champion.winrate }} %<br>
                            <span class="positive-color">{{ playerStats[player.summonerId].champion.wins }}</span> - <span class="negative-color">{{ playerStats[player.summonerId].champion.loses }}</span><br>
                            {{ playerStats[player.summonerId].champion.kda }}<br>
                            {{ playerStats[player.summonerId].champion.killsAVG }} / {{ playerStats[player.summonerId].champion.deathsAVG }} / {{ playerStats[player.summonerId].champion.assistsAVG }}
                        {% endif %}
                    </td>
                    <td>
                        <!-- Trigger the modal with a button -->
                        <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#runesModal-{{ player.summonerId }}">Runes</button>

                        <!-- Modal -->
                        <div id="runesModal-{{ player.summonerId }}" class="modal fade" role="dialog">
                            <div class="modal-dialog">

                                <!-- Modal content-->
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                                        <h4 class="modal-title">{{ player.summonerName }}</h4>
                                    </div>
                                    <div class="modal-body">
                                        {% for rune in player.runes %}
                                            <img src="http://ddragon.leagueoflegends.com/cdn/{{ static_data_version }}/img/rune/{{ runesImg[rune.runeId] }}" /> X {{  rune.count }}<br>
                                            {{ runesStats[rune.runeId].description }}<br>
                                            {{ runesStats[rune.runeId].name }}<br>
                                            {%  if not loop.last %}
                                                <hr>
                                            {%  endif %}
                                        {% endfor %}
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </td>
                </tr>
            {% endif %}
        {% endfor %}
    </table>
