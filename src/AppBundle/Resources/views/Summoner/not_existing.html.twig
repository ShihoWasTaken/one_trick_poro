{% extends 'AppBundle::layout.html.twig' %}

{% block title %}
    {{ parent() }} | {{ 'title.summoner.not.existing' | trans }}
{% endblock title %}

{% block stylesheets %}
    {{ parent() }}
{% endblock stylesheets %}

{% block javascripts_body %}
    {{ parent() }}
    <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
    <script src="{{ path('fos_js_routing_js', {"callback": "fos.Router.setData"}) }}"></script>
{% endblock %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-md-12 white-bg">
                <h2>{{ 'summoner.not.found.for.this.region'|trans({'%name%': name, '%region%': region.name}) }}</h2>
                <div>{{ 'try.another.region'|trans }} :</div>
                {% for region in data.regions %}
                    {% if data.summoners[region.slug] is defined %}
                        <div class="col-lg-3 col-sm-4 col-xs-6">
                            <a href="{{ path('app_summoner',{'region': region.slug, 'summonerId': data.summoners[region.slug][formattedName]['id']}) }}">
                                <div class="panel panel-default summoner-not-found-pannel">
                                    <div class="panel-heading">{{ region.name }}</div>
                                    <div class="panel-body">
                                        <p class="col-md-12">{{ data.summoners[region.slug][formattedName]['name'] }}</p>
                                        <img class=" img-responsive col-md-6"
                                             src="{{ data.summoners[region.slug][formattedName]['profileIconId']|sumIcon }}"/>
                                        <div class="col-md-6">
                                            <p>
                                                Level {{ data.summoners[region.slug][formattedName]['summonerLevel'] }}</p>
                                        </div>
                                    </div>
                                </div>
                            </a>
                        </div>
                    {% endif %}
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock content %}
