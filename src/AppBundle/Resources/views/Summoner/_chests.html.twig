<div class="col-xs-12 col-md-12 white-bg">
    <div class="col-md-12">
        <h2>{{ 'chests'|trans }}</h2>
        <div class="row">
            <div class="col-md-9">
                <div id="chests-choice" class="btn-group">
                    <button data-filter="all" type="button"
                            class="btn btn-primary btn-lg">{{ 'chests.all.champions'|trans }} <span
                                class="badge">{{ champions|length }}</span></button>
                    <button data-filter="1" type="button" class="btn btn-primary btn-lg">{{ 'chests.owned'|trans }}
                        <span
                                class="badge">{{ owned }}</span></button>
                    <button data-filter="2" type="button" class="btn btn-primary btn-lg">{{ 'chests.remaining'|trans }}
                        <span class="badge">{{ remaining }}</button>
                </div>
            </div>
            <div class="col-md-3 input-group">
                <input type="text" name="filtr-search" class="filtr-search form-control" value=""
                       placeholder="{{ 'search'|trans }}" data-search="">
            </div>
        </div>

        <div id="filtr-container-chests" class="filtr-container">
            {% for key, champion in champions %}
                <div class="col-lg-2 col-md-4 col-sm-3 col-xs-2 text-center champion filtr-item" data-category="{{ dataCategory[champion.key] }}"
                     data-sort="value">
                    <h4>{{ champion.name }}</h4>
                    <img src="http://ddragon.leagueoflegends.com/cdn/{{ static_data_version }}/img/champion/{{ champion.key }}.png">
                    {% if champion.chestGranted is defined and champion.chestGranted %}
                        <div>
                            <img src="{{ asset('bundles/app/images/champion-masteries/chest_champion_mastery_over.png' ) }}"/>
                        </div>
                    {% else %}
                        <div>
                            <img src="{{ asset('bundles/app/images/champion-masteries/chest_champion_mastery_disabled.png' ) }}"/>
                        </div>
                    {% endif %}
                </div>
            {% endfor %}
        </div>
    </div>
</div>
