<div class="form-group">
    <label for="runesPageSelect">{{ 'runes.page.choice'|trans }}:</label>
    <select class="form-control" id="runesPageSelect">
        {% for page in runePages.pages %}
            <option value="{{ loop.index }}">{{ loop.index }} - {{ page.name }}</option>
        {% endfor %}
    </select>
</div>
{% for page in runePages.pages %}
    <div class="hidden" id="rune-page-{{ loop.index }}">
        <h1>{{ page.name }}</h1>
        <div class="hidden rune-page-current-{{ page.current ? 'true':'false' }}">{{ loop.index }}</div>
        <div class="col-md-9">

            <div class="relative-container">
                <div class="runes-background" style="background-image: url({{ asset('bundles/app/images/runes/rune-bg.png') }});"></div>
                {% if page.slots is defined %}
                    {% for rune in page.slots %}
                        <div>
                            <div  data-toggle="tooltip" data-html="true" title="<h4>{{ translations[rune.runeId].name }}</h4>{{ translations[rune.runeId].description }}" class="overlay runes rune-overlay-{{ rune.runeSlotId }} {% if rune.runeSlotId > 27 %}quint{% endif %}"  style="background-image: url('http://ddragon.leagueoflegends.com/cdn/{{ static_data_version }}/img/rune/{{ runes[rune.runeId] }}');"></div>
                        </div>
                    {% endfor %}
                {% endif %}
            </div>
        </div>
        <div class="col-md-3">
            <h2>Total</h2>
        </div>
    </div>
{% endfor %}
<script>
    $( document ).ready(function() {

        var lastPageDisplayed = 1;

        $('#runesPageSelect').change(function(){
            var data = $(this).val();
            $('#rune-page-' + lastPageDisplayed).addClass('hidden');
            $('#rune-page-' + data).removeClass('hidden');
            lastPageDisplayed = data;
        });

        var index =         $('.rune-page-current-true:first').text();

        $('#runesPageSelect')
                .val(index)
                .trigger('change');
        $('[data-toggle="tooltip"]').tooltip();
    });
</script>
