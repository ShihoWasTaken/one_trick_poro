{% extends "AppBundle::layout.html.twig" %}

{% block body %}
    <div class="container">
        <div class="row white-bg">
            <div class="col-md-12">
                <h1>{% block page_title %}{% endblock page_title %}</h1>
                <div class="row">
                    <img class="img-responsive col-md-3"
                         src="http://ddragon.leagueoflegends.com/cdn/{{ static_data_version }}/img/sticker/poro-{% block poro %}{% endblock poro %}.png"/>
                    <p class="col-md-9">{% block content %}{% endblock content %}</p>
                </div>
                <div class="row">
                    <div class="col-md-6 col-md-offset-3">
                        <a class="btn btn-default btn-lg" href="{{ url('app_homepage') }}"><i class="fa fa-home"
                                                                                              aria-hidden="true"></i> {{ 'back.to.home'|trans }}
                        </a>
                        <a class="btn btn-default btn-lg" href="{{ url('app_contact') }}"><i class="fa fa-envelope"
                                                                                             aria-hidden="true"></i> {{ 'contact.support'|trans }}
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock body %}